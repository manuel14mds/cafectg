    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid d-lg-flex">
                <a class="navbar-brand" href="/">CaféCTG</a>
                <div class="d-inline-flex justify-content-evenly align-items-center gap-2">
                    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    {{#if user}}
                        <div class="d-lg-none d-xl-blockd-flex d-flex gap-2 justify-content me-3">
                            <a href="/account">account</a>
                            {{#if user.admin}}
                                <!-- dont show cart and wishlist -->
                            {{else}}
                                <a href="#"><i class="fa-solid fa-heart"></i></a>
                                <a href="/cart/{{user.cartId}}"><i class="fa-solid fa-cart-shopping"></i></a>
                            {{/if}}
                        </div>
                    {{else}}
                        <div class="d-lg-none d-xl-blockd-flex d-flex gap-2 justify-content me-3">
                            <a ><i class="fa-solid fa-heart"></i></a>
                            <a ><i class="fa-solid fa-cart-shopping"></i></a>
                            <div class="dropdown">
                                <a href="#" class="dropdown-toggle" role="button" id="dropdownLogin" data-bs-toggle="dropdown"aria-expanded="false">login</a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownLogin">
                                    <li><a class="dropdown-item" href="/login">User Login</a></li>
                                    <li><a class="dropdown-item" href="/loginadmin">Admin Login</a></li>
                                </ul>
                            </div>
                        </div>
                    {{/if}}

                </div>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
                    aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Café Cartagena</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            {{#if user.admin}}
                                <!-- admin menu -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle active" href="#" id="offcanvasNavbarDropdown" role="button"
                                        data-bs-toggle="dropdown" aria-expanded="true" style="color: red;">
                                        ADMIN
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="offcanvasNavbarDropdown">
                                        <li><a class="dropdown-item" href="/products">Products</a></li>
                                        <li><a class="dropdown-item" href="/addProduct">Add Product</a></li>
                                        <li><a class="dropdown-item" href="/carts">Carts</a></li>
                                        <li><a class="dropdown-item" href="/wishlists">WishLists</a></li>
                                        <li><a class="dropdown-item" href="/purchases">Purchases</a></li>
                                        <li><a class="dropdown-item" href="/users">Users</a></li>
                                    </ul>
                                </li>
                            {{/if}}

                            <li class="nav-item">
                                <a class="nav-link active" href="/category?category=jv">Juan Valdéz</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/category?category=du">Café Duran</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/category?category=om">Café Oma</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/category?category=ev">Entre Valles</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="offcanvasNavbarDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="true">
                                    Countries
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="offcanvasNavbarDropdown">
                                    <li><a class="dropdown-item" href="/category?category=co">Colombia</a></li>
                                    <li><a class="dropdown-item" href="/category?category=pa">Panamá</a></li>
                                    <li><a class="dropdown-item" href="/category?category=gt">Guatemala</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><a class="dropdown-item" href="/category?category=all">See All products</a></li>
                                </ul>
                            </li>
                        </ul>
                        
                        <!-- wishlist, cart and login icons -->
                        {{#if user}}
                            <div class="navIcons-desktop d-flex gap-2 align-items-center mx-3 d-none">
                                <a href="/account">account</a>

                                {{#if user.admin}}
                                    <!-- dont show cart and wishlist -->
                                {{else}}
                                    <a href="#"><i class="fa-solid fa-heart"></i></a>
                                    <a href="/cart/{{user.cartId}}"><i class="fa-solid fa-cart-shopping"></i></a>
                                {{/if}}

                            </div>
                        {{else}}
                            <div class="navIcons-desktop d-flex gap-2 align-items-center mx-3 d-none">
                                <a ><i class="fa-solid fa-heart"></i></a>
                                <a ><i class="fa-solid fa-cart-shopping"></i></a>
