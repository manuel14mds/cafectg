{{!-- Style css --}}
<link rel="stylesheet" href="../style/style.css">
<link rel="stylesheet" href="../style/admItemList.css">

    <div class="adm_item_list">
        <ul class="list-container container">
            
            {{#if purchases}}
                {{#each purchases}}
                    <!-- Item List Purchase -->
                    <li class="list-group-item adm_item_list">
                        <div>
                            <ul class="list-group list-group-horizontal-md adm_item_container">
                                <li class="list-group-item prodList-content adm-item-id-container flex-fill">
                                    <div class="col-md-3">Purchase ID:</div>
                                    <div class="col-md-9 adm-item-id">{{this.id}}</div>
                                </li>
                                <li class="list-group-item prodList-btn">
                                    <a  href="/resume/purchase/{{this.id}}"  type="button" class="btn btn-secondary">show</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            {{else}}
                <h2>No purchases yet ...</h2>
            {{/if}}


        </ul>
    </div>
