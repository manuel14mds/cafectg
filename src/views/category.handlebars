{{!-- Style css --}}
    <link rel="stylesheet" href="./style/category.css">
<main>
    <div class="category">
        <div class="categoryTitleContainer">
            <div class="categoryLogo" style="background-image: url(./images/logos/{{ctg}}.jpg);"></div>
            <h1 class="categoryTitle">{{category}}</h1>
        </div>
        <div class="listContainer">

            <div class="card">
                <video class="videoCartCategory" autoplay muted controls>
                    <source src="./videos/{{ctg}}.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>

            {{#each products}}
                {{> card }}
            {{/each}}
        </div>
    </div>

</main>
<script src="./scripts/card.js"></script>